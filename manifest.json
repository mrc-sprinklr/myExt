{
    "manifest_version": 3,
    "name": "myExt",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "file://*/*"
            ],
            "js": ["./content_script.js"]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo_light.png"
    },
    "icons": {
        "128": "logo_light.png"
    },
    "permissions": [
        "activeTab",
        "cookies"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}